{
  "build": {
    "builder": "nixpacks",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs-16_x", "npm"]
        },
        "install": "cd backend && npm install",
        "build": "cd backend && npm run build",
        "start": "cd backend && npm start"
      }
    }
  }
}
